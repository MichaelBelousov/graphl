{
  "name": "@graphl/ide",
  "version": "0.1.0",
  "description": "Grahpl IDE in browsers",
  "main": "./dist/graphl-ide-web.es.js",
  "module": "./dist/graphl-ide-web.es.js",
  "type": "module",
  "types": "./dist/graphl-ide-web.d.ts",
  "author": {
    "url": "https://graphl.tech",
    "name": "Michael Belousov",
    "email": "me@mikemikeb.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/graphl-ide-web.es.js",
    "./browser": "./dist/graphl-ide-web.es.js"
  },
  "scripts": {
    "build": "zig build -Doptimize=ReleaseSmall && NODE_ENV=production ./esbuild.mjs",
    "build-debug": "zig build -Doptimize=Debug && NODE_ENV=development ./esbuild.mjs",
    "build-demo": "zig build && vite build -c ./vite.demo.config.ts --mode production",
    "preview": "vite preview",
    "dev": "vite --port 3001 -c ./vite.demo.config.ts",
    "dev-zig": "git ls-files | entr -rc zig build",
    "test": "mocha --config ./.mocharc.js tests/unit/**/*.test.ts",
    "test-e2e": "playwright test tests/e2e"
  },
  "devDependencies": {
    "@bjorn3/browser_wasi_shim": "^0.4.1",
    "@graphl/compiler-js": "workspace:*",
    "@playwright/test": "^1.30.0",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^3.0.1",
    "chai": "^4.3.7",
    "esbuild": "^0.24.0",
    "jsdom": "^21.1.0",
    "jsdom-global": "^3.0.2",
    "lodash.debounce": "^4.0.8",
    "mocha": "^10.2.0",
    "monaco-editor": "^0.39.0",
    "playwright-core": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "rollup-plugin-zigar": "^0.14.0",
    "ts-node": "^10.9.1",
    "typescript": "5.0.0-beta",
    "vite": "^4.0.4",
    "vite-plugin-inspect": "^0.7.15"
  }
}
