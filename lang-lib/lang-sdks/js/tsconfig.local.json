// this is for generating an index.js to consume locally in other projects that need full debugging, cuz rollup doesn't seem to provide that
// more or less
// TODO: make that situation better
{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ES2024",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
  },
  "include": [
    "./index.ts"
  ]
}
